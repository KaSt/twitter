nav.navbar.navbar-default.navbar-fixed-top(style="background-color: #fff;")
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href="/" style="padding: 10px 15px;")
        img(src="/img/twitter.png" alt="Twitter" style="width: 30px; height: 30px;")
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if user
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | #{user.name}&nbsp;
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='/users') View profile
                li.divider
                li
                  a(href='/settings') Settings
                li
                  a(href="/logout") logout
          li
            a(href="/post") post
        else
          li
            a(href="/login") login
          li
            a(href="/register") register
