extends layout

block styles
  link(rel="stylesheet", href="/css/style.css")
  link(rel="stylesheet", href="/css/users.css")

block content
  include components/menu

  include components/profile-nav

  .container
    .row
      .col-md-6.col-md-offset-3
        if !followings_count
          if is_me
            p.lead You aren't following anyone yet.
          else
            p.lead #{user.fullname} isn't following anyone yet.
        else
          ul.list-group
            li.list-group-item
              p.lead(style="margin-bottom: 0;")= title
            each following in followings
              li.list-group-item
                h4.list-group-item-heading
                  a.text-gray-dark(href="/users/" + following.name)=  following.fullname
                p.list-group-item-text
                  a.text-muted(href="/users/" + following.name) @#{following.name}
