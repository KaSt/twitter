extends layout

block styles
  link(rel='stylesheet', href='/css/style.css')

block content
  include components/menu

  .container
    .row
      .col-md-8.col-md-offset-2
        .panel.panel-default(style="margin-top: 10px;")
          .panel-body
            form.signup(action="/register" method="post")
              h2= title
              p Fill in the form below to sign up!

              include components/messages

              p
                input.form-control(type="text" name="user[fullname]" placeholder="Full name")
              p
                input.form-control(type="text" name="user[name]" placeholder="Username")
              p
                input.form-control(type="password" name="user[pass]" placeholder="Password")
              p
                input.btn.btn-info(type="submit" value="Sign Up")
