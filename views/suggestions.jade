extends layout

block styles
  link(rel="stylesheet", href="/css/style.css")

block content
  include components/menu

  .container(style="margin-top: 15px; margin-bottom: 15px;")
    .row
      .col-md-6.col-md-offset-3
        ul.list-group
          li.list-group-item
            p.lead.text-muted(style="margin-bottom: 0;") Who to follow
            p.text-muted Follow more people from the suggestions below.
            each suggestion in suggestions
              li.list-group-item
                .row
                  .col-sm-9
                    h4.list-group-item-heading
                      a.text-gray-dark(href="/@#{suggestion.name}")= suggestion.fullname
                    p.list-group-item-text
                      a.text-muted(href="/@#{suggestion.name}") @#{suggestion.name}
                  .col-sm-3(style="padding-top: 3px; padding-bottom: 3px;")
                    form(action="/follow/#{suggestion.name}" method="post")
                      button.btn.btn-default.pull-right(type="submit") Follow